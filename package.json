{
  "scripts": {
    "start": "concurrently \"npm run frontend\" \"npm run backend\"",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run backend\"",
    "build": "cd client && npm run build",
    "frontend": "cd client && npm start",
    "dev:frontend": "cd client && npm run dev",
    "backend": "cd server && source ./venv/bin/activate && python main.py"
  },
  "dependencies": {
    "concurrently": "^9.1.0"
  }
}
